{% extends 'base.html.twig' %}

{% block title %}Mon Tamagosaure{% endblock %}

{# /*block de stylesheets */ #}

{# /*block de stylesheets */ #}
{% block stylesheets %}
        {{ parent() }}
        <style>
            body {
                background-image: url({{ asset("build/images/backgrounds/background-blue-one.png") }});
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center center;
                /*autres priority de l'image de fond*/
                }
        </style>
{% endblock %}

{% block body %}

<body class="container">
    <div>
        <h1 class="display-2 text-success h1 text-center font-poppins">Mon premier Tamagosaurus</h1>
        <div
            id="tamagosaurus"
            class="text-primary display-1 text-center font-weight-bold"
            data-tamagosaurus-id="{{tamagosauru.id}}"
        >
            {{ tamagosauru.name }}
        </div>

    <div class="bg-white p-4 custom-padding neon-effect pt-5">
    <img class="rounded mx-auto d-block" style="width: 30%" src="{{ asset('build/images/dinosaures/diplosaure-aquaticus.png') }}" alt="Un mignon Tamagosaurus !"><br>
    </div>

        <p class="text-success pt-5">Faim : <span id="dino-hunger"></span></p>
        <h2 class="text-success h2">Donnez lui Ã  manger<h2>
        <p class="lead text-success">Nourrissez le chaque jour, vous disposez diverses aliments.</p>

        <div id="options-hunger" class="element-hidden"> {# Display/hide feed buttons #}
            {% include 'layout/_buttons-hunger.html.twig' %}
        </div>

        <div id="options-clothes" class="element-hidden">
            <button class="btn btn-primary">test</button>
        </div>

        <div id="options-locations" class="d-flex flex-row justify-content-center element-hidden">
            {% for location in destinations %}
            <a role="button" href="{{ path('app_stroll_go', { destination: location.id }) }}" class="btn btn-primary btn-lg text-uppercase text-white" style="margin-left: 40px; margin-right: 40px; margin-bottom: 40px; margin-top: 40px">{{ location.name }}</a>
            {% endfor %}
        
        </div>
        {% include 'layout/_buttons-option.html.twig' %}
        {% include 'footer/_footer.html.twig' %}
    </div>

<script src="/build/js/api/request.js"></script>
<script src="/build/js/tamagosaurus.js"></script>
</body>

{% endblock %}